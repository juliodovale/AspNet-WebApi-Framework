@model List<AGENDASite.Models.UsuarioModel>
@{
    ViewBag.Title = "Cadastro de Usuários";
}
<div id="cadastro">
    <section id="cadastro_cabecalho">
        <h1>@ViewBag.Title</h1>
    </section>
    <section id="cadastro_conteudo">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div id="cabecalho_grid" class="row">
                        <div class="col-md-12">
                            <a id="btn_incluir" class="btn btn-success" role="button"><i class="glyphicon glyphicon-plus"></i> Incluir</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table id="grid_cadastro" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Email</th>
                                        <th>Senha</th>
                                        <th>Nascimento</th>
                                        <th>Genero</th>
                                        <th>Status</th>
                                        <th>Ação</th>
                                    </tr>
                                </thead>
                                <tbody>
                                   
                                    @foreach (var result in Model)
                                    {
                                    <tr>
                                        
                                        <td>@result.Nome</td>
                                        <td>@result.Email</td>
                                        <td>@result.Senha</td>
                                        <td>@result.Nascimento</td>
                                        <td>@result.IdGenero</td>
                                        <td>@{var ativo = (result.Ativo ? "SIM" : "NÃO");}@ativo</td>
                                        <td>
                                            <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                                            <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>